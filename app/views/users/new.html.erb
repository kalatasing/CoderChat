<%= stylesheet_link_tag    'users', media: 'all', 'data-turbolinks-track': 'reload' %>

<div class="container" id="wrap">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">

      <%= form_for @user, :html => {class: "form" } do |f|%>
        <div class="row">
          <div class="col-xs-6 col-md-6">
            <%= f.text_field :first_name, class: "form-control input-lg", placeholder: "Enter your first name" %>
          </div>
          <div class="col-xs-6 col-md-6">
            <%= f.text_field :last_name, class: "form-control input-lg", placeholder: "Enter your last name" %>
          </div>
        </div>

        <%= f.text_field :email, class: "form-control input-lg", placeholder: "Your Email" %>
        <%= f.password_field :password, class: "form-control input-lg", placeholder: "Your Password" %>
        <%= f.password_field :password_confirmation, class: "form-control input-lg", placeholder: "Confirm Your Password" %>
        <%= f.submit 'Submit', class: "btn btn-lg btn-primary btn-block signup-btn" %>
      <% end %>
    </div>
  </div>
</div>
